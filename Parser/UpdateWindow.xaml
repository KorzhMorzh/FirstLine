<Window x:Class="Parser.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="UpdateWindow" Height="575" Width="817" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="LightGray" HorizontalAlignment="Left" Width="810" Height="30"
                    VerticalAlignment="Bottom" Margin="0,0,0,0.4">
            <TextBlock VerticalAlignment="Top" Margin="5" Text="Количество обновленных записей: " />
            <TextBlock VerticalAlignment="Top" Margin="5" x:Name="totalChanges" />
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="0,0.2,0.4,-0.4">
            <Grid Name="GridOfChanges" />
        </ScrollViewer>
    </Grid>


</Window>